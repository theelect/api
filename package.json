{
  "name": "elect",
  "version": "1.0.0",
  "description": "The Elect API",
  "main": "app.js",
  "scripts": {
    "prestart": "npm run -s build",
    "start": "npm run apidoc && node dist/index.js",
    "dev": "npm run apidoc && nodemon src/api/index.js --exec \"node -r dotenv/config -r babel-register\"",
    "apidoc": "apidoc -i src/api/routes/ -o src/public/apidoc",
    "clean": "rimraf dist",
    "build": "npm run clean && mkdir -p dist && babel src -s -D -d dist",
    "test": "jest --watch",
    "lint": "esw -w src test"
  },
  "apidoc": {
    "title": "The Elect API documentation",
    "template": {
      "forceLanguage": "en"
    }
  },
  "keywords": [
    "Election",
    "Campaign"
  ],
  "author": "Johnson Ejezie",
  "license": "ISC",
  "dependencies": {
    "apidoc": "^0.17.7",
    "bcryptjs": "^2.4.3",
    "boom": "^7.2.2",
    "cors": "^2.8.5",
    "dotenv": "^6.1.0",
    "express": "^4.16.3",
    "joi": "^14.0.6",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.11",
    "mongoose": "^5.3.11",
    "morgan": "^1.9.0",
    "rimraf": "^2.6.2",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-inline-import": "^2.0.6",
    "babel-plugin-transform-async-to-module-method": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "nodemon": "^1.17.3"
  }
}
